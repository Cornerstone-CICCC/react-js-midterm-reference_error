    "dotenv": "^16.5.0",
    "graphql": "^16.10.0",
    "graphql-voyager": "^2.1.0",
    "jwt-decode": "^4.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
