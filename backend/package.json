  "scripts": {
    "build": "nest build",
    "format": "biome format --write",
    "start": "dotenv -e .env.production -- nest start",
    "start:dev": "dotenv -e .env.development -- nest start --watch",
    "start:debug": "dotenv -e .env.development -- nest start --debug --watch",
    "start:prod": "dotenv -e .env.production -- node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "dotenv -e .env.test -- jest",
    "test:watch": "dotenv -e .env.test -- jest --watch",
    "test:cov": "dotenv -e .env.test -- jest --coverage",
    "test:debug": "dotenv -e .env.test -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e .env.test -- jest --config ./test/jest-e2e.json",
    "prisma:push": "dotenv -e .env.development -- prisma db push",
    "prisma:push:test": "dotenv -e .env.test -- prisma db push",
    "prisma:push:prod": "dotenv -e .env.production -- prisma db push",
    "prisma:dev": "dotenv -e .env.development -- prisma migrate dev",
    "prisma:test": "dotenv -e .env.test -- prisma migrate dev",
    "prisma:deploy": "dotenv -e .env.production -- prisma migrate deploy"
  },
